<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ListSong">

    <SearchView
        android:id="@+id/searchView_song"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="22dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/edit_text_layout"
        android:iconifiedByDefault="false"
        android:queryHint="Search song name here"
        android:searchIcon="@drawable/ic_baseline_search_24">

    </SearchView>
    <ListView
        android:id="@+id/listViewSong"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_height="200dp"
        />

      <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/jcplayersong"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/gradientdescent"
        android:visibility="gone"
        app:next_icon_color="@color/black"
        app:pause_icon_color="@color/black"
        app:play_icon_color="@color/black"
        app:previous_icon_color="@color/black"
        app:progress_color="@color/black"
        app:random_icon_color="@color/black"
        app:repeat_icon_color="@color/black"
        app:seek_bar_color="@color/black"
        app:text_audio_current_duration_color="@color/black"
        app:text_audio_duration_color="@color/black"
        app:text_audio_title_color="@color/black"
        />

</RelativeLayout>