<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".SearchResult">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_search_24"
            android:layout_marginTop="27dp">

        </ImageView>
        <TextView
            android:id="@+id/textView_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ket qua tim kiem"
            android:textSize="25dp"
            android:textColor="@color/White"
            android:fontFamily="@font/cascadia"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/listViewResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="15dp"/>

    <com.example.jean.jcplayer.view.JcPlayerView
        android:id="@+id/jcplayerres"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/gradientdescent"
        android:visibility="gone"
        app:next_icon_color="@color/black"
        app:pause_icon_color="@color/black"
        app:play_icon_color="@color/black"
        app:previous_icon_color="@color/black"
        app:progress_color="@color/black"
        app:random_icon_color="@color/black"
        app:repeat_icon_color="@color/black"
        app:seek_bar_color="@color/black"
        app:text_audio_current_duration_color="@color/black"
        app:text_audio_duration_color="@color/black"
        app:text_audio_title_color="@color/black" />

</LinearLayout>